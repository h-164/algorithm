function solution(n) {
    var answer = 0;
    
    let arr = [];
    
    n = n.toString()
    
    for(let i = 0; i < n.length; i++){
        arr.push(parseInt(n[i]))
    }
    
    arr = arr.sort(function(a,b){
        return b - a
    })
    
    arr = parseInt(arr.join(""))
    
    
    return arr;
}
